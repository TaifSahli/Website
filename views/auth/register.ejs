







<%- contentFor('HeaderCss') %>



    <%-include("../partials/title-meta",{"title": "Register" }) %>


    <!-- CSS -->
    <link rel="stylesheet" href="assets/signup/css/style.css" />

    <!-- Boxicons CSS -->
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />

    <%- contentFor('body') %>
    <div class="container">
      <header>أنشئ حسابك</header>
      <% if(error.length> 0) { %>
        <div class="alert alert-danger bg-danger border-danger text-white mb-4" role="alert">
          <%= error %>
        </div>
        <% } %>
        <% if(message.length> 0) { %>
        <div class="alert alert-success bg-success border-success text-white mb-4" role="alert">
          <%= message %>
        </div>
        <% } %>
      <form action="/signup" method="post" novalidate>
        <div class="field email-field">
          <div class="input-field">
            <input type="email" id="useremail" name="email" required  placeholder="البريد الالكتروني" class="email" />
          </div>
          <span class="error email-error">
            <i class="bx bx-error-circle error-icon"></i>
            <p class="error-text">Please enter a valid email</p>
          </span>
        </div>
          <div class="input-field">
            <input type="text" id="username" name="username" required placeholder=" اسم المستخدم" />
          </div>
          <br/>
       
        <div class="field create-password">
          <div class="input-field">
            <input
              type="password"
              id="password-input" name="password" aria-describedby="passwordInput" minlength="5" required
              placeholder="كلمة السر"
              class="password"
            />
          
            <i class="bx bx-hide show-hide"></i>
          </div>
          <span class="error password-error">
            <i class="bx bx-error-circle error-icon"></i>
            <p class="error-text">
              Please enter atleast 8 charatcer with number, symbol, small and
              capital letter.
            </p>
          </span>
        </div>
   
        <div class="input-field button">
          <input type="submit" value="سجل الدخول" />
        </div>
      </form>
    </div>

    <!-- JavaScript -->
    <script src="signup/js/script.js"></script>
    <%- contentFor('FooterJs') %>